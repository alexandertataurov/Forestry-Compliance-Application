{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "css": {
      "transforms": ["name/kebab", "size/px"],
      "buildPath": "styles/",
      "files": [
        {
          "destination": "design-tokens.css",
          "format": "css/variables",
          "options": {
            "outputReferences": true,
            "selector": ":root"
          }
        }
      ]
    },
    "json": {
      "transforms": ["name/kebab"],
      "buildPath": "tokens/",
      "files": [
        {
          "destination": "tailwind-tokens.json",
          "format": "json"
        }
      ]
    }
  }
}
